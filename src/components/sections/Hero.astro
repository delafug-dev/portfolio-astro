---
import Button from "@/components/ui/Button.astro";
import SunIcon from "@/components/ui/icons/SunIcon.astro";
import MoonIcon from "@/components/ui/icons/MoonIcon.astro";
---

<section
  id="hero-section"
  class="flex xl:flex-row flex-col gap-3 xl:gap-5 mt-5 w-full fade-up"
  style="--fade-delay: 850ms; --fade-translate-y: -40px; --fade-ease: cubic-bezier(0.7, 0, 0.3, 1);"
>
  <div class="w-full xl:w-[706px] h-auto xl:h-[515px] bento">
    <div class="p-4 xl:p-8">
      <div
        class="bg-orange mb-2 md:mb-0 rounded-full w-20 xl:w-28 h-20 xl:h-28"
      >
      </div>
      <p class="text-text xl:text-[54px] text-3xl md:text-4xl xl:text-5xl leading-tight xl:leading-20">
        <strong class="font-semibold">Adrian de la Fuente</strong> is a <strong
          class="font-normal text-orange">fullstack developer</strong
        > passionate about technology.
      </p>
    </div>
  </div>
  <div
    class="flex-1 gap-3 xl:gap-5 grid grid-cols-2 grid-rows-2 xl:grid-rows-3"
  >
    <a
      href="/cv/Adrian_de_la_Fuente_CV.pdf"
      target="_blank"
      rel="noopener noreferrer"
      style="pointer-events: auto !important; position: relative; z-index: 10;"
      class="flex justify-center items-center col-span-1 font-bold text-orange xl:text-[48px] text-3xl text-center leading-tight xl:leading-[50px] cursor-pointer bento"
    >
      GET <br />CV
    </a>
    <div
      id="theme-toggle-tile"
      class="flex flex-col justify-between gap-5 col-span-1 p-5 cursor-pointer bento"
    >
      <div id="theme-icon" class="relative w-[42px] h-[42px]">
        <SunIcon id="sun-icon" className="absolute inset-0 w-[42px] h-[42px] theme-icon-sun" />
        <MoonIcon id="moon-icon" className="absolute inset-0 w-[42px] h-[42px] theme-icon-moon" />
      </div>
      <p class="text-md text-text xl:text-xl">
        <span id="theme-text-dark" class="theme-text-dark"
          >Press this tile for the light mode.</span
        >
        <span id="theme-text-light" class="theme-text-light"
          >Press this tile for the dark mode.</span
        >
      </p>
    </div>
    <div
      class="flex flex-col justify-center items-center gap-6 xl:gap-10 col-span-2 row-span-1 xl:row-span-2 p-4 bento"
    >
      <p
        class="font-family-inter font-bold text-text text-4xl xl:text-5xl text-center"
      >
        Have a project in mind ?
      </p>
      <Button
        text="adelafuentegarceso@gmail.com"
        href="mailto:adelafuentegarceso@gmail.com?subject=Project Inquiry&body=Hi! I have a project in mind and would like to discuss it with you."
        class="bg-orange rounded-[300px] w-[250px] md:w-[300px] xl:w-[400px] h-14 md:h-16 xl:h-24 font-bold text-white md:text-md text-sm xl:text-xl"
      />
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    // AnimaciÃ³n del hero
    const nav = document.getElementById("hero-section");
    if (nav) {
      void nav.offsetHeight;
      nav.classList.add("is-animated");
    }
    
    // Toggle de tema
    const toggleTile = document.getElementById("theme-toggle-tile");
    if (toggleTile) {
      toggleTile.addEventListener("click", () => {
        window.themeManager?.toggle();
      });
    }
  });
</script>
