---
import HeartIcon from "../ui/icons/HeartIcon.astro"
---

<footer id="footer" class="mt-5 fade-up" style="--fade-delay: 5100ms; --fade-translate-y: -40px; --fade-ease: cubic-bezier(0.7, 0, 0.3, 1);">
  <div
    class="flex flex-row justify-between items-center xl:mx-auto px-8 py-5 w-full max-w-full font-semibold bentoHeaderFooter"
  >
    <span class="font-inter font-medium text-white tracking-[-0.01rem]"
      >devlafug.</span
    >
    <div class="hidden md:flex flex-row items-center gap-2 font-inter text-gray-400 text-sm">
        <p>Made with</p>
        <HeartIcon className="flex-shrink-0 w-4 h-4"/>
        <p> by Adrian de la Fuente</p>
    </div>
    <div class="md:hidden flex flex-row items-center gap-1 font-inter text-gray-400 text-sm">
        <p>made with</p>
        <HeartIcon className="flex-shrink-0 w-4 h-4" />
    </div>
  </div>
</footer>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    const footer = document.getElementById("footer");
    if (footer) {
      void footer.offsetHeight;
      footer.classList.add("is-animated");
    }
  });
</script>